generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}



model Language {
  Language String
  Translations Translation[] @relation("OrginalLanguage")
  Translated Translation[] @relation("LanguageTranslations")
  @@id([Language])
}


model Translation {
  Word String
  Language String
  TranslatedLanguage String
  TranslatedWord String
  language          Language @relation("OrginalLanguage", fields: [Language], references: [Language])
  translatedLanguage Language @relation("LanguageTranslations", fields: [TranslatedLanguage], references: [Language])
  @@id([Word, Language, TranslatedLanguage])
}

